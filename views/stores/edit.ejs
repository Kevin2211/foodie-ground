<% layout('layouts/boilerplate') %> 


    <div class="row">
        <div class="col-lg-6 col-md-6 h-30">
            <img src="/icons/edit-store.jpg" id="new-store" alt="">
        </div>
        <div class="card col-lg-6 col-md-6">
            <form action="/stores/<%= store._id %>?_method=put" method="post" novalidate class="needs-validation mx-auto my-auto" enctype="multipart/form-data">
            <h3 class="text-center">Edit Store</h3>    
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input type="text" class="form-control" name="store[title]" id="title" value="<%= store.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class='form-label' for="location">Location:</label>
                <input type="text" class="form-control" name="store[location]" id="location" value="<%= store.location %>" required>   
                <div class="valid-feedback">
                    Looks good!
                </div>         
            </div>
            <div class="mb-3">
                    <label for="image" class="form-label">Add image:</label>
                    <input class="form-control" name="image" type="file" id="image" multiple>
                <div class="valid-feedback">
                    Looks good!
                </div>           
            </div>
            <label class='form-label' for="price">Hours:</label>
            <div class="input-group mb-3">
                
                <label for="open" class="form-label">Open: </label>
                <input type="time" class="form-control" name="store[hours]" value="<%= store.hours[0] %>" id="open" required>
                <label for="close" class="form-label">Close: </label>
                <input type="time" class="form-control" name="store[hours]" value="<%= store.hours[1] %>" id="close" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
            <div class="mb-3">
                <label class='form-label' for="description">Description:</label>
                <textarea type="text" class="form-control" name="store[description]" id="description"> <%= store.description %> </textarea required> 
                <div class="valid-feedback">
                    Looks good!
                </div>           
            </div>
            <div class="mb-3">
                <% store.images.forEach((image,i) => { %>
                        <img src="<%= image.thumbnail %>" class='img-thumbnail' alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="<%= i %>" name="deleteImages[]" value="<%= image.fileName %>">
                            <label for="<%= i %>">Delete</label>
                        </div>
                <% }) %> 
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Edit store</button>
            </div>
            
        </form>
        <div class="text-center mb-3">
                    <a href="/stores/<%= store._id %>"><button class="btn btn-warning ">Cancel</button></a>
        </div>

        </div>
    </div>

    <script>
        async function initMap() {
        autocomplete = new google.maps.places.Autocomplete(document.getElementById('location'), 
        {
            componentRestrictions: { country: "us" },
            fields: [],
            types: ['address'],
    
        })
        }

    </script>
<% layout('layouts/boilerplate') %> 
    <h1>Favorites</h1>

        <% for(let store of user.favoriteStores) {%> 
            <div class="card mb-3 favorite-cards" >
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= store.images[0].url %> " class="img-fluid" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <h5><%= store.title %></h5>
                            <p class="card-text"> <%= store.description %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= store.location %> </small>
                            </p>
                            <a class="btn btn-dark" href="/stores/<%= store._id %> "> View store</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 

